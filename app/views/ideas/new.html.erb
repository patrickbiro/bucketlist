<main>
  <div class="content-wrapper">
    <h1>Create new idea</h1>
    <%= form_tag(ideas_create_path, method: :post, class: 'form--inpage') do %>
      <div class="input-group input-group--horizontal">
        <label class="input-group__label" for="new_goal">Title</label>
        <%= text_field_tag('title', nil, class: 'input-group__field', placeholder: "E.g. Ride a camel") %>
      </div>
      <div class="prompt">
        <a class="prompt__cancel" href="#cancel">Cancel</a>
        <%= button_tag('Update profile', class: 'btn btn--primary prompt__confirm') %>
      </div>
    <% end %>
  </div>
  <div>
  </div>
</main>
