<div class="card">
  <div class="card__thumb">
    <%= link_to(idea_path(goal)) do %>
    <% if(goal.photo_url.nil?||goal.photo_url.length==0) %>
      <%= image_tag("http://fpoimg.com/255x170", alt: "a card image") %>
    <% else %>
      <%= image_tag(goal.photo_url, alt: "a card image") %>
    <% end %>
    <div class="card__intro">
      <h4 class="card__title"><%= goal.title %></h4>
      <span><%= goal.done_count %> have done this</span>
    </div>
    <% end %>
  </div>
  <div class="card__footer">
    <%= link_to(user_goal_path(current_user, goal), class: 'btn delta', method: :delete, remote: false) do %>
      <svg class="icon-delete" role="presentation">
        <use href="<%= image_path('icons/icons-defs.svg') %>#delete"></use>
      </svg>
      Remove goal
    <% end %>

    <% if(can_edit?(goal)) %>
    <a class="btn delta" href= <%= edit_idea_path(goal) %>>
      <svg class="icon-edit" role="presentation">
        <use href="<%= image_path('icons/icons-defs.svg') %>#edit"></use>
      </svg>
      Edit
    </a>
    <% end %>
  </div>
</div>
