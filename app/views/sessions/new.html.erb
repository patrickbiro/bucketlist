<main>
  <section class="envelope">
    <header class="text--center">
      <h1 class="gamma">Log in</h1>
    </header>
    <main>


      <%= form_tag(sessions_path) do %>
      <div class="input-group">
        <%= label(:email,nil, 'Email address', class: 'input-group__label') %>
        <%= email_field_tag(:email,nil, class: 'input-group__field', placeholder: "e.g. me@epfl.ch")%>
      </div>

      <div class="input-group">
        <%= label(:password, nil, 'Password', class: 'input-group__label') %>
        <%= password_field_tag(:password,nil, class: 'input-group__field')%>
      </div>

      <div class="prompt">
        <%= submit_tag('Log in', class: 'btn btn--primary prompt__confirm') %>
      </div>
      <% end %>

    </main>
  </section>
</main>
