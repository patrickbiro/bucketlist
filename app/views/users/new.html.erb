<main>
  <section class="envelope">
    <header class="text--center">
      <h1 class="gamma">Sign up / Log in</h1>
    </header>
    <main>
      <% if(@user.errors.any?) %>
      <div class="alert alert--wide">
        <%= @user.errors.full_messages.join('<br />').html_safe %>
      </div>
      <% end %>


      <%= form_for(@user, html: { class: 'form--inpage' }) do |form| %>
      <div class="input-group">
        <%= form.label(:email, 'Email address', class: 'input-group__label') %>
        <%= form.email_field(:email, class: 'input-group__field', placeholder: "e.g. me@epfl.ch")%>
      </div>

      <div class="input-group">
        <%= form.label(:password, 'Password', class: 'input-group__label') %>
        <%= form.password_field(:password, class: 'input-group__field')%>
      </div>

      <div class="prompt">
        <%= form.submit('Log in', class: 'btn btn--primary prompt__confirm') %>
      </div>
      <% end %>

    </main>
  </section>
</main>
