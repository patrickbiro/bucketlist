<div class="card">
  <div class="card__thumb">
    <a href="ideas/one-example-idea.html">
      <% if(photo_url.nil?) %>
        <%= image_tag("http://fpoimg.com/255x170", alt: "a card image") %>
      <% else %>
        <%= image_tag(photo_url, alt: "a card image") %>
      <% end %>
    </a>
    <div class="card__intro">
      <h4 class="card__title"><%= title %> </h4>
      <span><%= done_count %> have done this</span>
    </div>
  </div>
  <div class="card__footer">
    <button class="card__btn card__like delta" data-like="see-the-northern-lights">
      <svg class="icon-heart" role="presentation">
        <use href="/images/icons/icons-defs.svg#heart"></use>
      </svg>
      Like
    </button>
    <button class="card__btn card__add delta" data-addGoal="see-the-northern-lights">
      <svg class="icon-pluss" role="presentation">
        <use href="/images/icons/icons-defs.svg#pluss"></use>
      </svg>
      Add Goal
    </button>
  </div>
</div>
